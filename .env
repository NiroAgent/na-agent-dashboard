# Server Configuration
PORT=4002
NODE_ENV=development

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
AWS_PROFILE=default

# GitHub Integration (add your token)
# GITHUB_TOKEN=your-github-personal-access-token
# GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_ORG=NiroAgent

# AI Integration (add your key)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Frontend Configuration
VITE_API_URL=http://localhost:4002
VITE_WS_URL=ws://localhost:4002

# Monitoring Configuration
MONITORING_INTERVAL=30000
COST_UPDATE_INTERVAL=300000

# Log Level
LOG_LEVEL=info

# Cost Optimization
USE_GITHUB_COPILOT_FOR_ALL=false

# TypeScript Agents Configuration
# Primary: Use EC2 instance directly (update IP when known)
TYPESCRIPT_AGENTS_URL=http://ec2-agents.visualforge.ai
TYPESCRIPT_AGENTS_API_KEY=your-api-key-here

# EC2 Instance Configuration (i-0af59b7036f7b0b77)
EC2_INSTANCE_ID=i-0af59b7036f7b0b77
EC2_INSTANCE_IP=pending-deployment

# Fallback Configuration (for when DNS isn't ready)
TYPESCRIPT_AGENTS_FALLBACK_URL=http://localhost
ENABLE_FALLBACK_TESTING=true