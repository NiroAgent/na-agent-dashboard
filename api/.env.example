# AWS Configuration - Set these to your real AWS credentials
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# External Service URLs - Set these to your real service endpoints
POLICY_ENGINE_URL=http://your-policy-engine.com:8080
POLICY_ENGINE_TOKEN=your_policy_engine_api_token

DATADOG_API_URL=https://api.datadoghq.com
DATADOG_API_KEY=your_datadog_api_key

MONITORING_API_URL=http://your-monitoring-service.com
MONITORING_API_TOKEN=your_monitoring_token

# Cost Tracking
AWS_COST_API_URL=https://ce.us-east-1.amazonaws.com

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_ORG=your_github_organization

# Database (if using external database for policy logs)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis (for caching external API responses)
REDIS_URL=redis://localhost:6379

# Notification Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your-webhook

# External Policy Engine Settings
POLICY_ENGINE_TIMEOUT=5000
POLICY_ENGINE_RETRY_ATTEMPTS=3

# Live Data Update Settings
LIVE_DATA_UPDATE_INTERVAL=30000
HEALTH_CHECK_INTERVAL=60000
COST_UPDATE_INTERVAL=3600000
